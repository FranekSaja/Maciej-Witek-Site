---
import MainLayout from "@layouts/MainLayout.astro";
---
<MainLayout title="Strona nie znaleziona — 404">
  <section class="space-y-4 text-center py-20">
    <h1 class="text-5xl font-extrabold">404</h1>
    <p class="text-lg text-slate-600 dark:text-slate-300">Nie znaleziono żądanej strony.</p>
    <a href="/" class="inline-block mt-6 rounded bg-sky-600 px-4 py-2 font-medium text-white hover:bg-sky-700">Wróć na stronę główną</a>
  </section>
</MainLayout>
