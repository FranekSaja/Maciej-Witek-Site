---
export interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Maciej Witek — Strona oficjalna',
  description = 'Oficjalna strona Macieja Witka — sylwetka naukowa, obszary badawcze, publikacje i kontakt.'
} = Astro.props as Props;
import '../styles/global.css';
import MenuBar from "../components/MenuBar.astro";
---
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body class="min-h-screen antialiased">
    <MenuBar currentPage={Astro.url.pathname} />
    <main class="main-content slide-in">
      <slot />
    </main>
    <style>
      body {
        background-color: var(--color-bg);
        color: var(--color-fg);
      }
      @media (prefers-color-scheme: dark) {
        body {
          background-color: var(--color-bg-dark);
          color: var(--color-fg-dark);
        }
      }
      .main-content {
        /* Usunięto max-width i margin, aby kontener wypełniał dostępną przestrzeń */
        padding: 2.5rem;
        transition: margin-right 0.3s ease-in-out; /* Płynne przejście */
      }

      @media (min-width: 1400px) { /* Zsynchronizowano breakpoint z MenuBar */
        .main-content {
          margin-right: calc(var(--menu-width-lg) + 2rem);
        }
      }
    </style>
  </body>
</html>
