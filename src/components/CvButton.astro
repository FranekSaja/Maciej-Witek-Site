---
import Icon from './Icon.astro';

export interface Props {
  text: string;
  file: string;
}
const { text, file } = Astro.props;
const href = `${import.meta.env.BASE_URL}${file}`;
---
<a href={href} target="_blank" rel="noopener noreferrer" class="cv-button">
  <Icon name="mdi:file-document-outline" />
  <span>{text}</span>
</a>