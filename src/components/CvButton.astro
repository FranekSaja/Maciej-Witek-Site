---
import { Icon } from 'astro-icon/components';
import { ICON_SIZE } from '../config';

export interface Props {
  text: string;
  file: string;
}
const { text, file } = Astro.props;
const href = `${import.meta.env.BASE_URL}${file}`;
---
<a href={href} target="_blank" rel="noopener noreferrer" class="cv-button">
  <div>
    <Icon name="mdi:file-document-outline" size={ICON_SIZE} />
  </div>
  <span>{text}</span>
</a>