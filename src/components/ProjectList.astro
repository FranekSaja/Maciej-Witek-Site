---
import { getCollection } from 'astro:content';
import path from 'path-browserify';

const projects = await getCollection('projects');
const baseUrl = import.meta.env.BASE_URL;

const currentProjects = projects.filter(p => p.data.status === 'current');
const pastProjects = projects.filter(p => p.data.status === 'past');
---

<h2 class="text-2xl font-bold mt-8 mb-4">Current Projects</h2>
<ul class="project-list">
  {currentProjects.map((project) => (
    <li class="project-item">
      <a href={path.join(baseUrl, 'projects', project.slug)} class="project-link">
        {project.data.title}
      </a>
    </li>
  ))}
</ul>

<h2 class="text-2xl font-bold mt-8 mb-4">Past Projects</h2>
<ul class="project-list">
  {pastProjects.map((project) => (
    <li class="project-item">
      <a href={path.join(baseUrl, 'projects', project.slug)} class="project-link">
        {project.data.title}
      </a>
    </li>
  ))}
</ul>

<style>
  .project-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .project-item {
    border-bottom: 1px solid var(--color-menu-bg);
  }
  .project-link {
    padding: 1.575rem 2.5rem;
    transition: background-color 0.2s, color 0.2s, transform 0.2s ease-out;
    text-decoration: none;
    color: var(--color-fg);
    display: block;
    font-size: 1.125rem; /* Zmniejszona czcionka */
    font-weight: 400; /* Normalna grubość */
  }
  .project-link:hover {
    background-color: var(--color-menu-link-hover-bg);
    transform: scale(1.02) translateY(-1px); /* Subtelniejsza animacja */
    transition-duration: 0.3s; /* Wolniejsze przejście */
  }
</style>