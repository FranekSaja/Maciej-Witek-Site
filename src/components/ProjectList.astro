---
import { getCollection } from 'astro:content';
import path from 'path-browserify';
import { Icon } from 'astro-icon/components';

const projects = await getCollection('projects');
const baseUrl = import.meta.env.BASE_URL;

const currentProjects = projects.filter(p => p.data.status === 'current');
const pastProjects = projects.filter(p => p.data.status === 'past');
---

<h2 class="text-2xl font-bold mt-8 mb-4">Current Projects</h2>
<ul class="project-list">
  {currentProjects.map((project, index) => (
    <li class="project-item">
      <div class="project-header">
        <a href={path.join(baseUrl, 'projects', project.slug)} class="project-link">
          {project.data.title}
        </a>
        <button class="toggle-summary" data-index={`current-${index}`}>
          <Icon name="mdi:plus" size={24} />
        </button>
      </div>
      <div class="project-summary" id={`summary-current-${index}`}>
        <p>{project.data.summary}</p>
      </div>
    </li>
  ))}
</ul>

<h2 class="text-2xl font-bold mt-8 mb-4">Past Projects</h2>
<ul class="project-list">
  {pastProjects.map((project, index) => (
    <li class="project-item">
      <div class="project-header">
        <a href={path.join(baseUrl, 'projects', project.slug)} class="project-link">
          {project.data.title}
        </a>
        <button class="toggle-summary" data-index={`past-${index}`}>
          <Icon name="mdi:plus" size={24} />
        </button>
      </div>
      <div class="project-summary" id={`summary-past-${index}`}>
        <p>{project.data.summary}</p>
      </div>
    </li>
  ))}
</ul>

<script>
  document.querySelectorAll('.toggle-summary').forEach(button => {
    button.addEventListener('click', (event) => {
      event.preventDefault();
      event.stopPropagation();
      const projectItem = button.closest('.project-item');
      if (projectItem) {
        const summary = projectItem.querySelector('.project-summary');
        const link = projectItem.querySelector('.project-link');
        
        if (summary && link) {
          summary.classList.toggle('open');
          link.classList.toggle('open');
          const icon = button.querySelector('svg');
          if (icon) {
            icon.style.transform = summary.classList.contains('open') ? 'rotate(225deg)' : 'rotate(0deg)';
          }
        }
      }
    });
  });
</script>

<style>
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem; /* Wyraźny odstęp */
  }
  .project-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .project-item {
    /* border-top: 1px solid var(--color-fg); */
    /* border-bottom: 1px solid var(--color-fg); */
  }
  .project-link, .toggle-summary {
    padding: 1rem;
    transition: background-color 0.2s;
  }
  .project-link:hover, .toggle-summary:hover {
    background-color: var(--color-fg);
    color: var(--color-bg);
  }
  .project-link {
    text-decoration: none;
    color: var(--color-fg);
    display: block;
    flex-grow: 1;
    border-bottom: 1px solid var(--color-fg);
  }
  .toggle-summary {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-fg);
    border-bottom: 1px solid var(--color-fg);
  }
  .toggle-summary svg {
    transition: transform 0.3s ease-in-out;
  }
  .toggle-summary:hover {
    transform: scale(1.2);
  }
  .project-summary {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out, opacity 0.3s ease-out;
    padding: 0 1rem;
  }
  .project-summary.open {
    max-height: 100px; /* Adjust as needed */
    opacity: 1;
    padding: 1rem;
  }
  .project-link.open {
    background-color: var(--color-fg);
    color: var(--color-bg);
  }
</style>